<Window x:Class="RestaurantTouchPanel.CheckWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="お会計" Height="600" Width="800">

    <Window.Resources>
        <Style x:Key="CategoryButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="100" />
            <Setter Property="Height" Value="40" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Background" Value="#4CAF50" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Cursor" Value="Hand" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#66BB6A" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- 背景画像 -->
        <Grid.Background>
            <ImageBrush ImageSource="Images/wafu.jpg" Stretch="UniformToFill" />
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="100" />
            <!-- 大分類エリア -->
            <RowDefinition Height="*" />
            <!-- メインエリア -->
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- カテゴリーエリア -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10">
            <Button Content="トップ画面" Style="{StaticResource CategoryButtonStyle}" Click="CategoryButton_Click" />
            <Button Content="おすすめ・鍋" Style="{StaticResource CategoryButtonStyle}" Click="CategoryButton_Click" />
            <Button Content="料理" Style="{StaticResource CategoryButtonStyle}" Click="CategoryButton_Click" />
            <Button Content="刺身・寿司・サラダ" Style="{StaticResource CategoryButtonStyle}" Click="CategoryButton_Click" />
            <Button Content="アルコール①" Style="{StaticResource CategoryButtonStyle}" Click="CategoryButton_Click" />
            <Button Content="アルコール②" Style="{StaticResource CategoryButtonStyle}" Click="CategoryButton_Click" />
            <Button Content="ノンアル・ソフドリ" Style="{StaticResource CategoryButtonStyle}" Click="CategoryButton_Click" />
            <Button Content="デザート" Style="{StaticResource CategoryButtonStyle}" Click="CategoryButton_Click" />
            <Button Content="サービス" Style="{StaticResource CategoryButtonStyle}" Click="CategoryButton_Click" />
            <Button Content="特選メニュー" Style="{StaticResource CategoryButtonStyle}" Click="CategoryButton_Click" />
        </StackPanel>

        <!-- メインエリア -->
        <Border Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10" Background="#FFFFFF" Padding="20">
            <StackPanel>
                <TextBlock Text="お会計" FontSize="24" FontWeight="Bold" Margin="10" HorizontalAlignment="Center" />

                <!-- 注文一覧 -->
                <ListBox x:Name="OrderSummaryListBox" Width="400" Height="200" Margin="10" />

                <!-- 合計金額 -->
                <TextBlock x:Name="TotalAmountText" FontSize="18" FontWeight="Bold" Margin="10" />

                <!-- 人数入力 -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                    <TextBlock Text="人数：" FontSize="16" VerticalAlignment="Center" Margin="5" />
                    <TextBox x:Name="PeopleCountTextBox" Width="50" Margin="5" />
                    <Button Content="計算" Click="CalculatePerPerson_Click" Margin="5" />
                </StackPanel>

                <!-- 一人当たりの金額 -->
                <TextBlock x:Name="PerPersonAmountText" FontSize="18" FontWeight="Bold" Margin="10" />

                <!-- 閉じるボタン -->
                <Button Content="閉じる" Width="100" Height="40" FontSize="16" Click="CloseWindow_Click" HorizontalAlignment="Center" Margin="10" />
            </StackPanel>
        </Border>
    </Grid>
</Window>
