<Window x:Class="RestaurantTouchPanel.CheckWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="お会計画面" Height="400" Width="600">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Images/wafu.jpg" Stretch="UniformToFill" />
        </Grid.Background>
        <StackPanel Margin="20">
            <!-- 半透明の背景 -->
            <Border Background="#AA000000" Padding="10" CornerRadius="10">
                <StackPanel>
                    <TextBlock Text="お会計" FontSize="24" FontWeight="Bold" Margin="10" Foreground="White" />
                    <TextBlock x:Name="TotalAmountTextBlock" FontSize="20" FontWeight="Bold" Margin="10" Foreground="White" />
                    <TextBlock x:Name="AmountPerPersonTextBlock" FontSize="20" FontWeight="Bold" Margin="10" Foreground="White"/>
                    <Button Content="閉じる" FontSize="16" Margin="100" Width="100" Click="CloseButton_Click" />
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Window>
