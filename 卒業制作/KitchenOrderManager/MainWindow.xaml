<Window x:Class="KitchenOrderManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="注文管理" Height="600" Width="800">
    <Grid>
        <!-- タイトル -->
        <TextBlock Text="注文管理システム" HorizontalAlignment="Center" VerticalAlignment="Top"
                   FontSize="24" FontWeight="Bold" Margin="0,20,0,0" Foreground="White" />

        <!-- データグリッド -->
        <DataGrid x:Name="OrdersDataGrid" AutoGenerateColumns="False" 
                  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="20,80,20,100" 
                  IsReadOnly="True" SelectionMode="Extended">
            <!-- Extendedに変更して複数選択を許可 -->
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50" />
                <DataGridTextColumn Header="商品名" Binding="{Binding Name}" Width="200" />
                <DataGridTextColumn Header="数量" Binding="{Binding Quantity}" Width="100" />
                <DataGridTextColumn Header="単価" Binding="{Binding Price}" Width="100" />
                <DataGridTextColumn Header="合計金額" Binding="{Binding Total}" Width="100" />
                <DataGridTextColumn Header="ステータス" Binding="{Binding Status}" Width="150" />
            </DataGrid.Columns>
        </DataGrid>

        <!-- ボタン -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20">
            <Button Content="調理中に変更" Width="120" Height="40" Margin="10" Click="SetCookingStatusButton_Click" />
            <Button Content="提供済みに変更" Width="120" Height="40" Margin="10" Click="SetDeliveredStatusButton_Click" />
            <Button Content="再読み込み" Width="120" Height="40" Margin="10" Click="ReloadButton_Click" />
        </StackPanel>
    </Grid>
</Window>
